{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "ULTRAHUMAN_API_TOKEN",
        "ULTRAHUMAN_ACCESS_CODE",
        "ANTHROPIC_API_KEY",
        "POKE_API_KEY",
        "DASHBOARD_PASSWORD",
        "AI_GATEWAY_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
